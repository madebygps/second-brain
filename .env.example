# Diary Configuration
# Copy this file to .env and fill in your paths

# Required: Path to your Obsidian vault (or any markdown directory)
DIARY_PATH=/path/to/obsidian/vault

# Required: Path to planner directory for extracted todos
PLANNER_PATH=/path/to/planner

# LLM Provider: "ollama" or "azure"
LLM_PROVIDER=ollama

# Ollama configuration (used when LLM_PROVIDER=ollama)
OLLAMA_MODEL=llama3.1:latest
OLLAMA_URL=http://localhost:11434

# Azure OpenAI configuration (used when LLM_PROVIDER=azure)
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure AI Search configuration (for book notes search)
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key-here
AZURE_SEARCH_INDEX_NAME=second-brain-notes

# Optional: Daemon configuration
DAEMON_AUTO_LINK_TIME=23:00
DAEMON_WEEKLY_ANALYSIS=true
DAEMON_REFRESH_DAYS=30
